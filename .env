# MCP Gateway Local Development Environment
# This file allows running the gateway locally for quick debugging

# Server configuration
HOST=127.0.0.1
PORT=8000
DEBUG=true
LOG_LEVEL=DEBUG
LOG_FORMAT=text

# Security settings
ALLOWED_HOSTS=["*"]
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","http://localhost:8080"]

# Authentication - OIDC with Keycloak
ENABLE_AUTH=true
KEYCLOAK_SERVER_URL=http://localhost:8080
KEYCLOAK_REALM=BridgeMCP
KEYCLOAK_CLIENT_ID=mcp-gateway
KEYCLOAK_CLIENT_SECRET=7Hh8stp6hZsA61B6Jdd7HM1KzxMKw4qn

# Token validation settings
TOKEN_AUDIENCE=mcp-gateway
TOKEN_ISSUER=http://localhost:8080/realms/BridgeMCP
JWKS_CACHE_TTL=3600

# OBO (On-Behalf-Of) settings
ENABLE_OBO=true
OBO_CACHE_TTL=1800

# Security settings
CLOCK_SKEW_TOLERANCE=300
REQUIRED_SCOPES=[]

# Service registry
SERVICE_REGISTRY_FILE=config/services.yaml

# Rate limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_DEFAULT_LIMIT=5
RATE_LIMIT_DEFAULT_WINDOW=60
RATE_LIMIT_BACKEND=memory
