{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "MCP Gateway (Docker-style)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "mcp_gateway.main:app",
                "--host", "127.0.0.1",
                "--port", "8000",
                "--reload",
                "--log-level", "debug"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "MCP Gateway (Direct)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/mcp_gateway/main.py",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "console": "integratedTerminal"
        }
    ]
}