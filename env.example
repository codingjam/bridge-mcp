# MCP Gateway Environment Configuration
# Copy this file to .env and configure according to your environment

# Server Configuration
HOST=127.0.0.1
PORT=8000
DEBUG=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security Configuration
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=*
CORS_ORIGINS=*

# Authentication Configuration (OIDC with Keycloak)
ENABLE_AUTH=true
KEYCLOAK_SERVER_URL=https://your-keycloak-server.com
KEYCLOAK_REALM=your-realm
KEYCLOAK_CLIENT_ID=mcp-gateway
KEYCLOAK_CLIENT_SECRET=your-client-secret

# Token Validation Settings
TOKEN_AUDIENCE=mcp-gateway
TOKEN_ISSUER=https://your-keycloak-server.com/realms/your-realm
JWKS_CACHE_TTL=3600

# Token Introspection (optional - for revocation checking)
ENABLE_TOKEN_INTROSPECTION=false
INTROSPECTION_CACHE_TTL=300

# OAuth2 On-Behalf-Of (OBO) Settings
ENABLE_OBO=true
OBO_CACHE_TTL=1800

# Security Settings
CLOCK_SKEW_TOLERANCE=300
REQUIRED_SCOPES=[]

# Service Registry
SERVICE_REGISTRY_FILE=config/services.yaml

# HTTP Client Configuration
DEFAULT_TIMEOUT=30.0
CONNECT_TIMEOUT=10.0
READ_TIMEOUT=30.0
WRITE_TIMEOUT=10.0
POOL_TIMEOUT=5.0
HEALTH_CHECK_TIMEOUT=5.0
MAX_CONNECTIONS=100
MAX_KEEPALIVE_CONNECTIONS=20

# Request Limits
MAX_REQUEST_SIZE=10485760

# Rate Limiting (future use)
ENABLE_RATE_LIMITING=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Redis Configuration (optional - for caching and rate limiting)
# REDIS_URL=redis://localhost:6379/0
